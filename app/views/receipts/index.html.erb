<% content_for :title, "レシート一覧" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">レシート一覧</h1>
  <%= link_to "新規登録", new_receipt_path, class: "btn btn-primary" %>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <% if @receipts.any? %>
      <table class="table table-hover mb-0 align-middle">
        <thead class="table-light">
          <tr>
            <th scope="col">レシート名</th>
            <th scope="col" class="text-end">点数合計</th>
            <th scope="col" class="text-end">金額合計</th>
            <th scope="col" class="text-end">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @receipts.each do |receipt| %>
            <tr>
              <td class="fw-semibold"><%= receipt.name.presence || "名称未設定" %></td>
              <td class="text-end"><%= receipt.total_count %></td>
              <td class="text-end"><%= number_with_delimiter(receipt.total_value) %></td>
              <td class="text-end">
                <%= link_to "詳細", receipt, class: "btn btn-outline-secondary btn-sm me-1" %>
                <%= link_to "編集", edit_receipt_path(receipt), class: "btn btn-outline-primary btn-sm me-1" %>
                <%= button_to "削除", receipt, method: :delete, form: { data: { turbo_confirm: "このレシートを削除しますか？" } }, class: "btn btn-outline-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-4 text-center text-muted">
        レシートがまだありません。登録してください。
      </div>
    <% end %>
  </div>
</div>
