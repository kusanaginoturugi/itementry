<div id="<%= dom_id receipt %>" class="card shadow-sm">
  <div class="card-body">
    <p class="text-muted mb-1">レシート名</p>
    <h2 class="h5 mb-3"><%= receipt.name.presence || "名称未設定" %></h2>

    <div class="row mb-3">
      <div class="col-6">
        <p class="text-muted mb-1">点数合計</p>
        <p class="h5 mb-0"><%= receipt.total_count %> 点</p>
      </div>
      <div class="col-6">
        <p class="text-muted mb-1">金額合計</p>
        <p class="h5 mb-0"><%= number_with_delimiter(receipt.total_value) %> 円</p>
      </div>
    </div>

    <p class="text-muted small mb-0">
      更新日 <%= receipt.updated_at.to_fs(:short) %>
    </p>
  </div>
</div>
