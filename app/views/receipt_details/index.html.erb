<% content_for :title, "レシート明細一覧" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">レシート明細一覧</h1>
  <div class="d-flex gap-2">
    <%= form_with url: receipt_details_path, method: :get, local: true, class: "d-flex gap-2" do |f| %>
      <%= f.label :book_id, "帳票", class: "form-label mb-0 align-self-center" %>
      <%= f.select :book_id,
            options_from_collection_for_select(@books, :id, :title, params[:book_id].presence || @current_book&.id),
            { include_blank: "すべて" },
            class: "form-select form-select-sm" %>
      <%= f.submit "適用", class: "btn btn-outline-secondary btn-sm" %>
    <% end %>
    <%= link_to "新規登録", new_receipt_detail_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <% if @receipt_details.any? %>
      <table class="table table-hover mb-0 align-middle">
        <thead class="table-light">
          <tr>
            <th scope="col">商品ID</th>
            <th scope="col">商品名</th>
            <th scope="col" class="text-end">個数</th>
            <th scope="col" class="text-end">単価</th>
            <th scope="col" class="text-end">小計</th>
            <th scope="col" class="text-end">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @receipt_details.each do |detail| %>
            <tr>
              <td><%= detail.item_id %></td>
              <td><%= detail.item_name %></td>
              <td class="text-end"><%= detail.count %></td>
              <td class="text-end"><%= number_with_delimiter(detail.value) %></td>
              <td class="text-end"><%= number_with_delimiter(detail.sum_value) %></td>
              <td class="text-end">
                <%= link_to "詳細", detail, class: "btn btn-outline-secondary btn-sm me-1" %>
                <%= link_to "編集", edit_receipt_detail_path(detail), class: "btn btn-outline-primary btn-sm me-1" %>
                <%= button_to "削除", detail, method: :delete, form: { data: { turbo_confirm: "この明細を削除しますか？" } }, class: "btn btn-outline-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-4 text-center text-muted">
        レシート明細がまだありません。登録してください。
      </div>
    <% end %>
  </div>
</div>
