<% content_for :title, @item.name %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h1 class="h4 mb-1"><%= @item.name %></h1>
    <div class="text-muted">道具ID: <%= @item.id %></div>
  </div>
  <div class="btn-group">
    <%= link_to "一覧へ戻る", items_path, class: "btn btn-outline-secondary" %>
    <%= link_to "編集", edit_item_path(@item), class: "btn btn-primary" %>
    <%= button_to "削除", @item, method: :delete, form: { data: { turbo_confirm: "#{@item.name}を削除しますか？" } }, class: "btn btn-danger" %>
  </div>
</div>

<%= render @item %>
