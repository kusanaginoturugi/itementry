<% content_for :title, "商品一覧" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">商品一覧</h1>
  <%= link_to "新規登録", new_item_path, class: "btn btn-primary" %>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <% if @items.any? %>
      <table class="table table-hover mb-0 align-middle">
        <thead class="table-light">
          <tr>
            <th scope="col">
              <%= link_to "商品コード", items_path(sort: "item_code", direction: toggle_direction_for("item_code")), class: "text-decoration-none" %>
            </th>
            <th scope="col">
              <%= link_to "商品名", items_path(sort: "name", direction: toggle_direction_for("name")), class: "text-decoration-none" %>
            </th>
            <th scope="col" class="text-end">
              <%= link_to "価格", items_path(sort: "value", direction: toggle_direction_for("value")), class: "text-decoration-none" %>
            </th>
            <th scope="col" class="text-center">商品種類</th>
            <th scope="col" class="text-end">還付金</th>
            <th scope="col" class="text-end text-nowrap">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <% cell_style = item_code_style(item.item_code) %>
            <tr>
              <td class="fw-semibold" style="<%= cell_style %>"><%= item.item_code %></td>
              <td class="fw-semibold" style="<%= cell_style %>"><%= item.name %></td>
              <td class="text-end" style="<%= cell_style %>"><%= number_with_delimiter(item.value) %></td>
              <td class="text-center" style="<%= cell_style %>"><%= item_type_label(item.item_type) %></td>
              <td class="text-end" style="<%= cell_style %>"><%= number_with_delimiter(item.refund) %></td>
              <td class="text-end" style="<%= cell_style %>">
                <div class="d-inline-flex gap-1 flex-nowrap">
                  <%= link_to "詳細", item, class: "btn btn-outline-secondary btn-sm" %>
                  <%= link_to "編集", edit_item_path(item), class: "btn btn-outline-primary btn-sm" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-4 text-center text-muted">
        商品がまだありません。登録してください。
      </div>
    <% end %>
  </div>
</div>
