<% content_for :title, "商品一覧" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">商品一覧</h1>
  <%= link_to "新規登録", new_item_path, class: "btn btn-primary" %>
</div>

<div class="card shadow-sm">
  <div class="card-body p-0">
    <% if @items.any? %>
      <table class="table table-hover mb-0 align-middle">
        <thead class="table-light">
          <tr>
            <th scope="col">商品コード</th>
            <th scope="col">Name</th>
            <th scope="col" class="text-end">値段</th>
            <th scope="col" class="text-end text-nowrap">操作</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td class="fw-semibold"><%= item.item_code %></td>
              <td class="fw-semibold"><%= item.name %></td>
              <td class="text-end"><%= number_with_delimiter(item.value) %></td>
              <td class="text-end">
                <div class="d-inline-flex gap-1 flex-nowrap">
                  <%= link_to "詳細", item, class: "btn btn-outline-secondary btn-sm" %>
                  <%= link_to "編集", edit_item_path(item), class: "btn btn-outline-primary btn-sm" %>
                  <%= button_to "削除", item, method: :delete, form: { data: { turbo_confirm: "#{item.name}を削除しますか？" }, class: "d-inline" }, class: "btn btn-outline-danger btn-sm" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <div class="p-4 text-center text-muted">
        商品がまだありません。登録してください。
      </div>
    <% end %>
  </div>
</div>
