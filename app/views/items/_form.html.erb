<%= form_with(model: item, class: "card shadow-sm") do |form| %>
  <div class="card-body">
  <% if item.errors.any? %>
    <div class="alert alert-danger">
      <h2 class="h6 fw-semibold"><%= "#{item.errors.count}件のエラーにより保存できませんでした。" %></h2>

      <ul class="mb-0">
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="mb-3">
      <%= form.label :item_code, "商品コード", class: "form-label" %>
      <%= form.text_field :item_code, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :name, "商品名", class: "form-label" %>
      <%= form.text_area :name, class: "form-control", rows: 2, required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :item_type, "商品種類", class: "form-label" %>
      <%= form.number_field :item_type, class: "form-control", min: 0, step: 1, required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :value, "価格", class: "form-label" %>
      <%= form.number_field :value, class: "form-control", min: 0, step: 1, required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :refund, "還付金", class: "form-label" %>
      <%= form.number_field :refund, class: "form-control", min: 0, step: 1, required: true %>
    </div>

    <div class="form-check form-switch mb-4">
      <%= form.check_box :is_variable_value, class: "form-check-input", role: "switch" %>
      <%= form.label :is_variable_value, "単価を明細で変更可能にする", class: "form-check-label" %>
    </div>

    <div class="d-flex gap-2">
      <%= form.submit "保存する", class: "btn btn-primary" %>
      <%= link_to "戻る", item.persisted? ? item : items_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>
