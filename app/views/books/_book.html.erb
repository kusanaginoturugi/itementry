<div id="<%= dom_id book %>" class="card shadow-sm">
  <div class="card-body">
    <p class="text-muted mb-1">帳票名</p>
    <h2 class="h5 mb-3"><%= book.title.presence || "名称未設定" %></h2>

    <p class="text-muted mb-1 mt-3">ロック状態</p>
    <% if book.is_lock? %>
      <span class="badge bg-danger-subtle text-danger">ロック中</span>
    <% else %>
      <span class="badge bg-primary-subtle text-primary">編集可能</span>
    <% end %>

    <p class="text-muted small mb-0 mt-3">
      更新日 <%= book.updated_at.to_fs(:short) %>
    </p>
  </div>
</div>
