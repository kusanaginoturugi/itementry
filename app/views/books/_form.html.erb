<%= form_with(model: book, class: "card shadow-sm") do |form| %>
  <div class="card-body">
  <% if book.errors.any? %>
    <div class="alert alert-danger">
      <h2 class="h6 fw-semibold"><%= "#{book.errors.count}件のエラーにより保存できませんでした。" %></h2>

      <ul class="mb-0">
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="mb-3">
      <%= form.label :title, "台帳名", class: "form-label" %>
      <%= form.text_field :title, class: "form-control", required: true %>
    </div>

    <div class="form-check form-switch mb-4">
      <%= form.check_box :is_hidden, class: "form-check-input", role: "switch" %>
      <%= form.label :is_hidden, "非表示にする", class: "form-check-label" %>
    </div>

    <div class="d-flex gap-2">
      <%= form.submit "保存する", class: "btn btn-primary" %>
      <%= link_to "戻る", book.persisted? ? book : books_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>
