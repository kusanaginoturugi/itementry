<% content_for :title, @book.title %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <div>
    <h1 class="h4 mb-1"><%= @book.title %></h1>
    <div class="text-muted">ID: <%= @book.id %></div>
  </div>
  <div class="btn-group">
    <%= link_to "一覧へ戻る", books_path, class: "btn btn-outline-secondary" %>
    <%= link_to "編集", edit_book_path(@book), class: "btn btn-primary" %>
    <%= button_to "削除", @book, method: :delete, form: { data: { turbo_confirm: "この帳票を削除しますか？" } }, class: "btn btn-danger" %>
  </div>
</div>

<%= render @book %>
